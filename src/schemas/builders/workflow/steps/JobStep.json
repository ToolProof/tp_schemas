{
  "$id": "https://schemas.toolproof.com/v0/JobStep.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "allOf": [
    {
      "$ref": "https://schemas.toolproof.com/v0/Base.json#/$defs/Identifiable"
    },
    {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "https://schemas.toolproof.com/v0/IdLib.json#/$defs/JobStepId"
        },
        "kind": {
          "const": "job"
        },
        "jobId": {
          "$ref": "https://schemas.toolproof.com/v0/IdLib.json#/$defs/JobId"
        },
        "resourceBindings": {
          "type": "object",
          "properties": {
            "inputBindings": {
              "$ref": "https://schemas.toolproof.com/v0/ResourceBinding.json"
            },
            "outputBindings": {
              "$ref": "https://schemas.toolproof.com/v0/ResourceBinding.json"
            }
          },
          "required": [
            "inputBindings",
            "outputBindings"
          ],
          "unevaluatedProperties": false
        }
      },
      "required": [
        "kind",
        "jobId",
        "resourceBindings"
      ]
    }
  ],
  "unevaluatedProperties": false
}