{
    "name": "@toolproof/_schemas",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "scripts": {
        "build": "tsc -b",
        "generateTypes": "node ./dist/scripts/generateTypes.js",
        "update": "rmdir /s /q dist && pnpm run build && pnpm run generateTypes && cls"
    },
    "files": [
        "dist"
    ],
    "devDependencies": {
        "@apidevtools/json-schema-ref-parser": "^14.2.1",
        "@types/node": "^20.8.1",
        "ajv-cli": "^5.0.0",
        "ajv-formats": "^3.0.1",
        "json-schema-to-typescript": "^15.0.4",
        "typescript": "^5.0.0"
    }
}