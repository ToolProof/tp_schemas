{
    "$id": "https://schemas.toolproof.com/v0/WorkflowSpec.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "allOf": [
        {
            "$ref": "https://schemas.toolproof.com/v0/Base.json#/$defs/Identifiable"
        },
        {
            "properties": {
                "id": {
                    "$ref": "https://schemas.toolproof.com/v0/IdLib.json#/$defs/WorkflowSpecId"
                },
                "workflow": {
                    "$ref": "https://schemas.toolproof.com/v0/Workflow.json"
                },
                "resourceMaps": {
                    "type": "array",
                    "items": {
                        "$ref": "https://schemas.toolproof.com/v0/ResourceMap.json"
                    }
                }
            },
            "required": [
                "workflow",
                "resourceMaps"
            ]
        }
    ],
    "additionalProperties": false
}
