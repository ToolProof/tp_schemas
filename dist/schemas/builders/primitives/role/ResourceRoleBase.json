{
    "$id": "https://schemas.toolproof.com/v0/ResourceRoleBase.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "allOf": [
        {
            "$ref": "https://schemas.toolproof.com/v0/Base.json#/$defs/Concept"
        },
        {
            "type": "object",
            "properties": {
                "id": {
                    "$ref": "https://schemas.toolproof.com/v0/IdLib.json#/$defs/ResourceRoleId"
                },
                "typeId": {
                    "allOf": [
                        {
                            "$ref": "https://schemas.toolproof.com/v0/IdLib.json#/$defs/ResourceTypeId"
                        }
                    ],
                    "ui": "select"
                },
                "direction": {
                    "allOf": [
                        {
                            "$ref": "https://schemas.toolproof.com/v0/RoleDirection.json"
                        }
                    ],
                    "ui": "select"
                },
                "isPredicate": {
                    "type": "boolean",
                    "ui": "checkbox"
                }
            },
            "required": [
                "typeId",
                "direction",
                "isPredicate"
            ]
        }
    ],
    "unevaluatedProperties": false
}
